generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

enum Currency {
  EUR
  USD
  GBP
}


model JobOffer {
  id          String   @id @default(uuid())
  title       String
  description String
  company     String?
  location    String?
  salary_from Int
  salary_to   Int
  salary_currency Currency @default(EUR)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}